{
  "name": "fastify-template-monolith",
  "version": "0.0.0",
  "main": "src/app.ts",
  "author": "teo-garcia",
  "license": "MIT",
  "scripts": {
    "dev:api": "nodemon src/index.ts",
    "build:api": "docker compose up app",
    "serve:api": "pm2 start .fastify",
    "dev:db": "docker compose up db",
    "build:db": "docker compose up db -D",
    "debug:db": "docker compose up pgadmin",
    "serve:db": "docker compose up db",
    "test:api": "tap --ts src/tests --no-check-coverage --node-arg=--require=module-alias/register",
    "migrate:db": "yarn knex migrate:latest",
    "seed:db": "yarn knex seed:run",
    "dev": "concurrently --names 'app,db' -c 'bgBlue.bold,bgGreen.bold' \"yarn dev:api\" \"yarn dev:db\"",
    "build": "concurrently --names 'app,db' -c 'bgBlue.bold,bgGreen.bold' \"yarn build:api\" \"yarn serve:db\""
  },
  "dependencies": {
    "@fastify/auth": "^4.4.0",
    "@fastify/compress": "^6.5.0",
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^7.2.2",
    "@fastify/postgres": "^5.2.2",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "knex": "^3.0.1",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "pino-pretty": "^10.2.3",
    "tap": "^18.5.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/bcryptjs": "^2.4.5",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/tap": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
