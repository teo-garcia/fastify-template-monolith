{
  "name": "fastify-template-monolith",
  "version": "0.0.0",
  "main": "src/app.ts",
  "author": "teo-garcia",
  "license": "MIT",
  "scripts": {
    "dev:api": "nodemon src/index.ts",
    "build:api": "docker compose up app",
    "serve:api": "pm2 start .fastify",
    "dev:db": "docker compose up db",
    "build:db": "docker compose up db -D",
    "debug:db": "docker compose up pgadmin",
    "serve:db": "docker compose up db",
    "test:api": "tap --ts src/tests --no-check-coverage --node-arg=--require=module-alias/register",
    "migrate:db": "yarn knex migrate:latest",
    "seed:db": "yarn knex seed:run",
    "dev": "concurrently --names 'app,db' -c 'bgBlue.bold,bgGreen.bold' \"yarn dev:api\" \"yarn dev:db\"",
    "build": "concurrently --names 'app,db' -c 'bgBlue.bold,bgGreen.bold' \"yarn build:api\" \"yarn serve:db\""
  },
  "dependencies": {
    "@fastify/auth": "^4.3.0",
    "@fastify/compress": "^6.4.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/postgres": "^5.2.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.8.0",
    "@fastify/swagger-ui": "^1.9.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.19.2",
    "fastify-plugin": "^4.5.0",
    "knex": "^2.4.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.1",
    "pino-pretty": "^10.0.1",
    "tap": "^16.3.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.4.0",
    "@types/pg": "^8.10.2",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
