{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src" ,
    "paths": {
      "@config/*": ["config/*"],
      "@plugins/*": ["plugins/*"],
      "@tools/*": ["tools/*"],
      "@schemas/*": ["schemas/*"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routers/*": ["routers/*"],
    },
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
