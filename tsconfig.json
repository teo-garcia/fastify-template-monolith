{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "." ,
    "paths": {
      "@config/*": ["src/config/*"],
      "@plugins/*": ["src/plugins/*"],
      "@tools/*": ["src/tools/*"],
      "@schemas/*": ["src/schemas/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routers/*": ["src/routers/*"],
    },
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": ".fastify"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".fastify"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
